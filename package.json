{
  "name": "blog",
  "version": "0.0.1",
  "description": "",
  "author": {},
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "docker:dev": "docker compose --env-file ./.env.dev -f docker-compose.yml up -d",
		"docker:dev:config": "docker compose --env-file ./.env.dev -f docker-compose.yml config",
		"docker:dev:remove": "docker compose --env-file ./.env.dev -f docker-compose.yml down",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --detectOpenHandles --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.782.0",
    "@aws-sdk/lib-storage": "^3.782.0",
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "10.3.10",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.3.10",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/mongoose": "10.0.10",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "10.3.10",
    "@nestjs/swagger": "^8.1.1",
    "api-query-params": "5.4.0",
    "bcrypt": "5.1.1",
    "bullmq": "^5.47.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dayjs": "1.11.12",
    "handlebars": "4.7.8",
    "joi": "^17.13.3",
    "mongoose": "8.5.1",
    "nodemailer": "6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "slugify": "^1.6.6",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.6.2",
    "@nestjs/cli": "10.4.2",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.3.10",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "^1.4.12",
    "@types/node": "20.14.12",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "3.3.3",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.3",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@config/(.*)$": "<rootDir>/configs/$1",
      "^@repositories/(.*)$": "<rootDir>/repositories/$1"
    }
  }
}
